{# plugins/RebrandingBundle/Views/Default/index.html.twig #}
{% extends '@MauticCore/Default/content.html.twig' %}

{% block headerTitle %}
Rebranding Settings
{% endblock %}

{% block content %}
<div class="content-body container-fluid s-dashboard">
    <div class="box box-primary">
        <div class="box-body">
            <form id="rebranding-form" method="POST" action="{{ path('rebranding_save') }}" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="brand_name">Brand Name</label>
                    <input type="text" class="form-control" id="brand_name" name="brand_name" placeholder="Enter brand name">
                </div>

                <div class="form-group">
                    <label for="logo">Upload Logo</label>
                    <input type="file" class="form-control" id="logo" name="logo" accept="image/*">
                </div>

                <button type="submit" class="btn btn-primary btn-nospin">Save Changes</button>
                
                <button id="revert-to-default" class="btn btn-danger">
                <i class="fa fa-undo"></i> Revert to Default
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}